// https://takeuforward.org/plus/data-structures-and-algorithm/beginner-problems/patterns/pattern-15

class Solution {
public:

//TC - O(n2)
    void pattern15(int n) {
        for(int i = 1; i <= n; i++){
            char ch = 'A';
            for(int j = 1; j <= n+1-i; j++){
                cout << ch;
                ch++;
            }
            cout << endl;
        }
    }
};