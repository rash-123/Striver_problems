// https://takeuforward.org/plus/data-structures-and-algorithm/beginner-problems/patterns/pattern-7

class Solution {
public:

//TC - O(n2)
    void pattern7(int n) {
        for(int i = 1; i <= n; i++){
            for(int j = n; j > i; j--){
                cout << " ";
            }
            for(int k = 1; k <= 2*i-1; k++){
                cout << "*";
            }
            cout << endl;
        }
    }
};