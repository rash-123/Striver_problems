// https://takeuforward.org/plus/data-structures-and-algorithm/beginner-problems/basic-arrays/reverse-an-array/editorial

class Solution{
public:
//Time Complexity - O(N)
//Space Complexity - O(1)
    void reverse(int arr[], int n){
        int left = 0, right = n-1;
        while(left < right){
            swap(arr[left], arr[right]);
            left++;
            right--;
        }
    }
};
