// https://takeuforward.org/plus/data-structures-and-algorithm/beginner-problems/patterns/pattern-8

class Solution {
public:

//TC - O(n2)
    void pattern8(int n) {
        for(int i = n; i >= 1; i--){
            for(int j = i; j < n; j++){
                cout << " ";
            }
            for(int k = 1; k <= 2*i-1; k++){
                cout << "*";
            }
            cout << endl;
        }
    }
};