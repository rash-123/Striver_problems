// https://takeuforward.org/plus/data-structures-and-algorithm/beginner-problems/basic-arrays/sum-of-array-elements

class Solution{
public:
//Time Complexity: O(N) – Array with N elements is traversed, once
//Space Complexity: O(1) – A single variable is used to store the sum, regardless of the array size.
	int sum(int arr[], int n) {
		int sum = 0;
	  for(int i = 0; i < n; i++){
		sum += arr[i];
	  }
	  return sum;
	}
};