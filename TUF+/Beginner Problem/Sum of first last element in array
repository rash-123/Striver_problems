// https://takeuforward.org/plus/data-structures-and-algorithm/beginner-problems/language-basics/sum-of-first-last-element-in-array

class Solution {
public:

//TC - O(1)
    int sumOfFirstAndLast(vector<int>& nums) {
        int n = nums.size();
        int sum = nums[0] + nums[n-1];
        return sum;
    }
};